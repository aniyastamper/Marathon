<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Marathon"
             x:Class="Marathon.MainPage">

  <StackLayout Padding="20,20">
      <Label Text="Race Results" FontSize="Large" FontAttributes="Bold" HorizontalTextAlignment="Center" BackgroundColor="Silver"/>
      <ListView x:Name="LstResults"/>
      
      <Picker x:Name="RacePicker" Title="Please Pick A Race" 
              ItemDisplayBinding="{Binding race_name}" HorizontalOptions="Center" BackgroundColor="Silver" SelectedIndexChanged="RacePicker_OnSelectedIndexChanged">
         
      </Picker>
  </StackLayout>

</ContentPage>
